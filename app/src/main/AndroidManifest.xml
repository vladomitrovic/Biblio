<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caroline.vlado.biblio">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".showBooksActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".showAuthorsActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".showCategoriesActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddBookActivity" />
        <activity android:name=".AddAuthorActivity" />
        <activity android:name=".AddCategorieActivity" />
        <activity android:name=".DetailsBookActivity" />
        <activity android:name=".DetailsAuthorActivity" />
    </application>

</manifest>